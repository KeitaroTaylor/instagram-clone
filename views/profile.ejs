<!doctype html>
<html>
<head>
    <title>InstaClone</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body class="bg-dark">
    <div class="container fs-4">

        <div class="navbar bg-dark px-5 fixed-top">
            <div class="container-fluid">
                <a href="/" class="navbar-brand text-light fs-4">InstaClone</a>

                <div>
                    <a href="/feed" class="btn btn-outline-light fs-5">Feed</a>
                    <a href="/logout" class="btn btn-outline-light fs-5">Logout</a>
                </div>
            </div>
        </div>

        <div class="clearfix bg-dark p-5 rounded-3 mt-5">

            <div class="rounded-3 py-3 text-center text-light border border-light profile">
                <h1>My Profile</h1>
                <h1>( <%= user.local.username %> )</h1>
            </div>

            <div class="createPost rounded-3 bg-secondary p-3">
                <h2>Create Post</h2>
                <form action="/makePost" enctype="multipart/form-data" method="POST">
                    <input type="text" name="caption" placeholder="caption">
                    <input type="file" name="file-to-upload" class="fileChose">
                    <button type="submit">Create</button>
                </form>
            </div>

            <% for(let i = posts.length - 1; i >= 0; i--) {%>
            <div class="card p-3 rounded-3">
                <div class="card-body text-center">
                    <a href="/page/<%= posts[i].postedBy %>" class="username rounded-3"><%= posts[i].postedBy %></a>
                </div>

                <a href="/post/<%= posts[i]._id %>">
                <img src="<%= posts[i].img %>" alt="" class="rounded-3">
                </a>

                <div class="card-body">
                    <div class="card-title">
                        <span class="hidden"><%= posts[i]._id %></span>
                        <span class="likes"><span><%= posts[i].likes %></span> likes</span>
                        <i class="fa fa-heart likes"></i>
                    </div>
                    <p class="clear mt-5 p-2 rounded-3 text-center"><%= posts[i].caption %></p>
                </div>
            </div>
            <% } %>
        </div>


        

    </div>

    <script src="main.js"></script>
</body>
</html>